{
  "info": {
    "name": "Micro Auth API",
    "description": "A comprehensive collection for the micro-auth Node.js backend API with JWT authentication, social auth, OTP, and SIWE support.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
