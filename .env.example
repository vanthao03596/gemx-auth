# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=5

# Email (SMTP) - For OTP Login
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-test
GOOGLE_CLIENT_SECRET=your-google-client-secret-test
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback
TWITTER_CLIENT_ID=your-x-client-id-test
TWITTER_CLIENT_SECRET=your-x-client-secret-test
TWITTER_REDIRECT_URI=http://localhost:3000/api/v1/auth/twitter/callback
FRONTEND_DEFAULT_URL=http://localhost:3000