# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_PRIVATE_KEY_PEM=your-private-key-pem-here
JWT_PUBLIC_KEY_PEM=your-public-key-pem-here

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=5

# Email (SMTP) - For OTP Login
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-test
GOOGLE_CLIENT_SECRET=your-google-client-secret-test
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback
TWITTER_CLIENT_ID=your-x-client-id-test
TWITTER_CLIENT_SECRET=your-x-client-secret-test
TWITTER_REDIRECT_URI=http://localhost:3000/api/v1/auth/twitter/callback
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/v1/auth/discord/callback
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
FRONTEND_DEFAULT_URL=http://localhost:3000

# SIWE (Sign-In with Ethereum) Configuration
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SIWE_DOMAINS=localhost:3000,yourdapp.com,staging.yourdapp.com
CHAIN_ID=1

# Service-to-Service Authentication for Wallet System
# JSON object mapping service names to their API keys
SERVICE_API_KEYS={"order-service":"sk_order_production_key_here","referral-service":"sk_ref_production_key_here","payment-service":"sk_payment_production_key_here"}

# JSON array of allowed service names that can access internal wallet APIs
ALLOWED_SERVICES=["order-service","referral-service","payment-service"]

# Webhook Configuration (Optional)
# JSON array of webhook URLs to notify about events (e.g., referral creation)
WEBHOOK_URLS=["http://localhost:4000/api/webhooks/referral"]
# Secret key for signing webhook payloads (HMAC-SHA256)
WEBHOOK_SECRET=your-webhook-secret-key